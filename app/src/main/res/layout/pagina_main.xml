<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutMenuLateral"
    android:fitsSystemWindows="true">

    <!--ConteÃºdo da tela-->
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".TelaInicialActivity">

            <include layout="@layout/toolbar"/>

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:orientation="vertical">
                        <TextView
                                    android:id="@+id/mensagemInicial"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TextView" />
                        <ImageButton android:layout_width="246dp"
                                     android:layout_height="243dp"
                                     android:id="@+id/imageView1" android:layout_gravity="center"/>

                        <Button
                                android:id="@+id/botaoSair"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sair" />
                    </LinearLayout>
            </ScrollView>
    </LinearLayout>

    <!--Menu lateral-->
    <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/menu_lateral"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/menu_lateral_cabecalho"
            app:menu="@menu/menu_lateral">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>